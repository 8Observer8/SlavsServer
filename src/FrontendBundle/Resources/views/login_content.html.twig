{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<form action="{{ path("fos_user_security_check") }}" method="post" class="form" role="form">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username"/>

    <input type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Password"/>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Remember me</label>

    <small><a href="#" data-toggle="modal" data-target="#modalPassword">Forgot password?</a></small>

    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="Login" />
</form>
