{% trans_default_domain 'FOSUserBundle' %}


<div class="container text-center">
    <h1 class="my-5">Play the game</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <div class="col-sm">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form" role="form">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                {% endif %}
                <div class="row">
                    <div class="col-sm">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fas fa-user"></i></span>
                            <input class="form-control" type="text" id="username" name="_username"
                                   value="{{ last_username }}"
                                   required="required" placeholder="Username"/>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fas fa-lock"></i></span>
                            <input class="form-control" type="password" id="password" name="_password"
                                   required="required"
                                   autocomplete="current-password" placeholder="Password"/>
                        </div>
                    </div>
                </div>

                <input class="form-control btn btn-danger my-2" type="submit" id="_submit" name="_submit" value="Login"/>

                <p><small><a href="#" data-toggle="modal" data-target="#modalPassword">Forgot password?</a></small></p>
                <h2><a href="#" data-toggle="modal" data-target="#register-modal">Create new account</a></h2>

            </form>
        </div>
        <div class="col-sm">
            <h3>Login via social media</h3>
            <a href="#" class="btn btn-danger"><i class="fab fa-facebook"></i> Facebook</a>
            <a href="#" class="btn btn-danger"><i class="fab fa-google-plus-g"></i> Google+</a>
        </div>
    </div>

    <div class="modal fade" id="register-modal" tabindex="-1" role="dialog" aria-labelledby="register-modal-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="register-modal-label">Create new account</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ render(path('user_register_form')) }}
                </div>
            </div>
        </div>
    </div>
</div>
