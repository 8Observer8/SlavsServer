<!DOCTYPE html>
<html lang="{{ app.request.getLocale() }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Slavs - Slavian RPG game in WebGL</title>
    <meta name="description" content="Slavs - WebGL rpg game">

    <style>
        @font-face {
            font-family: RuslanDisplay;
            src: url('{{ asset('bundles/frontend/assets/font/RuslanDisplay.ttf') }}');
        }

        html, body {
            overflow: hidden;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }

        #renderCanvas {
            width: 100%;
            height: 100%;
            touch-action: none;
        }

        .pulse {
            animation: pulse 3s infinite;
            margin: 0 auto;
            display: table;
            margin-top: 50px;
            animation-direction: alternate;
            -webkit-animation-name: pulse;
            animation-name: pulse;
        }

        #game-loader {
            position: absolute;
            width: 100%;
            height: 100%;
            background-color: black;
        }

        .game-loader-content {
            position: absolute;
            left: 50%;
            top: 30%;
            -webkit-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            color: white;
            text-align: center;
        }

        .game-loader-content img {
            width: 506px;
            height: 94px;
        }

        @-webkit-keyframes pulse {
            0% {
                -webkit-transform: scale(1);
            }
            50% {
                -webkit-transform: scale(1.1);
            }
            100% {
                -webkit-transform: scale(1);
            }
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }
    </style>
</head>

<body>
    <div id="game-loader">
        <div class="game-loader-content">
            <img src="{{ asset('bundles/frontend/assets/logo.png') }}" class="pulse">
            <h2 id="game-loader-text">Loading engine...</h2>
        </div>
    </div>
    <canvas id="renderCanvas"></canvas>

    <script src="{{ asset('bundles/frontend/js/babylon/babylon.js') }}"></script>
    <script src="{{ asset('bundles/frontend/js/babylon/babylon.inspector.bundle.js') }}"></script>
    <script src="{{ asset('bundles/frontend/js/babylon/babylon.gui.min.js') }}"></script>
    <script src="{{ asset('bundles/frontend/js/babylon/materialsLibrary/babylon.terrainMaterial.min.js') }}"></script>
    <script src="{{ asset('bundles/frontend/js/socket.io.js') }}"></script>
    <script src="{{ asset('bundles/frontend/js/game/slavs.js') }}"></script>
    <script>
        let SESSION_TOKEN = '{{ sessionToken }}';
        {% if mobile %}
            let MOBILE = true;
        {% else %}
            let MOBILE = false;
        {% endif %}

        {% if debug %}
        let DEBUG = true;
        {% else %}
        let DEBUG = false;
        {% endif %}

        if (BABYLON.Engine.isSupported()) {
            let htmlElement = document.getElementById('renderCanvas');
            let serverUrl = window.location.hostname+':5000';
            document.getElementsByTagName("body")[0].setAttribute("oncontextmenu", "return false");

            new Game(htmlElement, serverUrl, SESSION_TOKEN, MOBILE, DEBUG);
        }
    </script>
</body>
</html>
